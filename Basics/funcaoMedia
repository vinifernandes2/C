#include <stdio.h>

float Media(float valor1, float valor2){
    float soma = valor1 + valor2;
    return soma / 2;
}

int main(){
    float nota1, nota2; 
    float media;

    printf("Digite a primeira nota: ");
    scanf("%f", &nota1);
    printf("Digite a segunda nota: ");
    scanf("%f", &nota2);

    media = Media(nota1, nota2);

    printf("A media das notas %.1f e %.1f eh %.1f\n", nota1, nota2, media);

    return 0;
